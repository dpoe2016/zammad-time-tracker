{
  "manifest_version": 3,
  "name": "Zammad Time Tracking Extension",
  "version": "3.0.0",
  "description": "Track time for Zammad tickets",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "cookies"
  ],

  "host_permissions": [
    "https://zammad.lohmann-breeders.com/*",
    "https://*.zammad.com/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://zammad.lohmann-breeders.com/*",
        "https://*.zammad.com/*",
        "https://*/*"
      ],
      "js": ["translations.js", "utilities.js", "logger.js", "storage.js", "api.js", "content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "Zammad Time Tracking"
  },

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}