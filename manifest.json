{
  "manifest_version": 3,
  "name": "Zammad Time Tracking Extension",
  "version": "3.1.7",
  "description": "Track time for Zammad tickets",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "cookies"
  ],

  "host_permissions": [
    "https://zammad.lohmann-breeders.com/*",
    "https://*.zammad.com/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://zammad.lohmann-breeders.com/*",
        "https://*.zammad.com/*",
        "https://*/*"
      ],
      "js": ["src/translations.js", "src/utilities.js", "src/logger.js", "src/storage.js", "src/api.js", "src/content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "Zammad Time Tracking"
  },

  "background": {
    "service_worker": "src/background.js"
  },

  "options_page": "src/options.html",

  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}