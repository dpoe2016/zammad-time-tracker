{
  "manifest_version": 3,
  "name": "Zammad Timetracking",
  "version": "1.0",
  "description": "Zeiterfassung f√ºr Zammad Tickets",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "cookies"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["translations.js", "api.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["translations.js", "api.js", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zammad Timetracking"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
